<%- include('../layouts/head')%>
<link rel='stylesheet' href='../stylesheets/predavac.css'/>
</head>

<body>
    <%- include('../layouts/nav')%>
    <div class="container-fluid centriranje mt-5">
        <div class="row">
            <div class="col-12 oblast">
                <div class="mb-5">
                    <h2>Dobro došli, <%=ime%></h2>
                </div>
                <div class="mb-5 centriranje">
                    <h4>Za neograničene i besplatne kvizove, ankete i Q&A kreirajte svoj Slido. </h4>
                </div>
                <div class="centriranje">
                    <button type="button" class="btn btn-primary dugme" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Kreirajte Slido
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <% if(messages.ok) {%>
        <h5 style="color:#415a77 ;"><%=messages.ok%></h5>
        <%}%>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Kreiranje predavanja</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="predavac/kreiranje" method="POST" enctype="multipart/form-data">
                        <input class="form-control mb-3" type="text" name="naziv" placeholder="Unesite naziv predavanja.." required>
                        <input  class="form-control mb-3" type="date" name="datum" min="2020-01-01" placeholder="Predavanje traje od.." onfocus="this.min=new Date().toISOString().split('T')[0]" required>
                        <input  class="form-control mb-3" type="date" name="datumdo" min="2020-01-01" placeholder="Predavanje traje do.." onfocus="this.min=new Date().toISOString().split('T')[0]" required>

                        <label>Učitajte pozadinsku sliku:</label>
                        <input class="form-control mb-3" type="file" name="image" placeholder="Učitajte pozadinsku sliku..">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Izadji</button>
                            <button type="submit" class="btn btn-primary">Potvrdi</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</body>
</html>